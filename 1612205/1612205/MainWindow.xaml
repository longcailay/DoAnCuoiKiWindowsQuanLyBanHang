<Window x:Class="_1612205.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1612205"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1100" WindowStartupLocation="CenterScreen" MaxHeight="700" MaxWidth="1100">
    <Canvas >
        <Grid Height="80" VerticalAlignment="Top" Background="#FF5C99D6" Width="1092">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="1" ShadowDepth="1" Color="#FFACACAC"/>
            </Grid.Effect>            
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22">QUẢN LÝ BÁN HÀNG</TextBlock>
        </Grid>
        <DockPanel x:Name="stpHome" Width="300" Height="670" Background="#FF31577E" LastChildFill="True">
            <StackPanel x:Name="stpUser" Height="200" Background="Aqua" DockPanel.Dock="Top"></StackPanel>
            <StackPanel x:Name="stpButtons" Width="300">
                <Button Name="btnSanPham" Content="Sản Phẩm" Height="100" Click="btnSanPham_Click"></Button>
                <Button Name="btnBaoCao" Content="Báo cáo" Height="100" Click="btnBaoCao_Click"></Button>
                <Button Name="btnGiaoDich" Content="Giao dịch" Height="100" Click="btnGiaoDich_Click"></Button>
            </StackPanel>
            <StackPanel ></StackPanel>
        </DockPanel>
        <UserControl Name="uscSanPham"  Background="Green" Width="800" Canvas.Left="300" Canvas.Top="80" Height="590">
            <Canvas>                
                <Label Content="usercontrol sản phẩm"></Label>
                
            </Canvas>
            
        </UserControl>
        <UserControl Name="uscBaoCao" Visibility="Collapsed" Background="Blue" Width="800" Canvas.Left="300" Canvas.Top="80" Height="590">
            <Canvas>
                <StackPanel Name="stpBaoCaoButtons" Background="Beige" Orientation="Horizontal" Width="800" Height="80">
                    <Button Name="btnBaoCaoSanPham" Width="200" Content="Sản phẩm"></Button>
                    <Button Name="btnBaoCaoDoanhThu" Width="200" Content="Doanh thu"></Button>
                </StackPanel>
            </Canvas>
        </UserControl>

        <UserControl Name="uscGiaoDich" Visibility="Collapsed" Background="Pink" Width="800" Canvas.Left="300" Canvas.Top="80" Height="590">
            <Label Content="usercontrol giao dịch"></Label>
        </UserControl>
    </Canvas>
</Window>
